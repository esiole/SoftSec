html.h-100
    head
        meta(charset="utf-8")
        link(rel="stylesheet", type="text/css", href="/public/css/index.css")
        link(rel="stylesheet", type="text/css", href="/public/css/webfonts/all.min.css")
        link(rel="stylesheet", type="text/css", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        title ClearComments
    body.d-flex.flex-column.h-100
        header.mb-5.pb-4
            nav.navbar.navbar-dark.bg-dark.navbar-expand.border-bottom.fixed-top
                div.container-fluid
                    a.navbar-brand(href="/") ClearComments
                    ul.navbar-nav.flex-grow-1
                        li.nav-item
                            a.nav-link(href="/help") Документация
        main.flex-shrink-0.mb-3
            div.container-fluid
                div.d-flex.justify-content-center
                    div.w-75.bg-light.border.border-secondary.border-2.rounded
                        div.d-flex.flex-row
                            div.flex-fill.my-3.ms-3.me-4
                                textarea#code.w-100.code-input.border.border-dark(rows="20", wrap="off") =code
                            div.flex-fill.my-3.me-3
                                textarea.w-100.code-input(rows="20", wrap="off", readonly) =resultCode
                        div.d-flex.flex-row.justify-content-between.border-top.border-3
                            div.my-3.ms-3(style="width: 250px;")
                                select#lang.w-100.form-select.form-select-lg.p-2
                                    option(value="JS", selected=lang === "JS") JavaScript
                                    option(value="Python" selected=lang === "Python") Python
                            div.my-3(style="width: 250px;")
                                button#submit-btn.w-100.btn.btn-success.btn-lg.p-2 Очистить
                                    i.fas.fa-bolt.float-end.pt-1
                            div.my-3.me-3(style="width: 250px;")
                                button#copy-btn.w-100.btn.btn-dark.btn-lg.p-2 Копировать
                                    i.fas.fa-copy.float-end.pt-1
        footer.footer.mt-auto.py-3.bg-light
            div.container.text-center &copy; 2021 - Есиков Олег
        script(src='/public/js/index.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
